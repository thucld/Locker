<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lock"
        android:layout_width="@dimen/size_200"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/spacing_64"
        android:text="@string/str_lock_the_phone"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/enableBtn"
        android:layout_width="@dimen/size_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_64"
        android:text="@string/str_enable"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/disableBtn"
        android:layout_width="@dimen/size_200"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_64"
        android:text="@string/str_disable"
        android:textAllCaps="true" />

</RelativeLayout>